#/bin/bash
# where am i? move to where I am. This ensures source is properly sourced
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR

while [ $# -gt 0 ]; do
  ARGUMENT=$1 # example --name=value

  ARGUMENT=$(sed 's/=.*$//g' <<< "$ARGUMENT")
  ARGUMENT=$(sed 's/--//g' <<< "$ARGUMENT")

  VALUE="${1#*=}"
  case $ARGUMENT in
  "site")
    SITE=$VALUE
    ;;
  "branch")
    ARG_BRANCH=$VALUE
    ;;
  "host")
    ARG_HOST=$VALUE
    ;;
  esac
  shift
done

#Load config file and defaults it contains
source $DIR/configs/$SITE.cfg

#Overwrite defaults if supplied as an argument
if [ "$ARG_BRANCH" != "" ]; then
  BRANCH=$ARG_BRANCH
fi

if [ "$ARG_HOST" != "" ]; then
  HOST=$ARG_HOST
fi

echo "cd $CODE_DIR"
cd $CODE_DIR

echo "git fetch origin"
git fetch origin

echo "git branch -a"
git branch -a

echo "git status"
git status

echo "git reset --hard $BRANCH"
git reset --hard $BRANCH

echo "eval POSTDEPLOY"
eval "$POSTDEPLOY"

echo "End of serverdeploy script"
